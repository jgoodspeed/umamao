#main
  %h2= t(".title")

  - if @invitation
    %p#invitation_introduction
      = t('.invitation.title', :user => '<span class="inviter_name">' + h(@invitation.sender.name) + '</span>')
    #invitation_message
      = avatar_for(@invitation.sender, :size => 64, :class => 'inviter_avatar')
      = markdown(@invitation.message)
      -# Sorry about this, guys
      .clear
  - elsif @group_invitation
    #invitation_message
      = markdown(@group_invitation.message)
  - elsif @affiliation
    #invitation_message
      = t('.affiliation_message', :email => @affiliation.email)

    %hr
  - @user.password = @user.password_confirmation = nil
  - if @user.errors.present?
    - @user.translate_errors
    #errorExplanation.errorExplanation
      %ul
        - @user.errors.each do |field, errors|
          - errors.each do |error|
            %li= error

  = form_for @user, :url => users_path, :html => {:class => "form"} do |f|
    = f.hidden_field :invitation_token
    = f.hidden_field :affiliation_token
    = hidden_field_tag :group_invitation, @group_invitation.try(:slug)
    .field
      .label
        = f.label :email, t(:email, :scope => "users.form")
      .input
        = f.email_field :email

    .field
      .label
        = f.label :password, t(:password, :scope => "users.form")
      .input
        = f.password_field :password

    .field
      .label
        = f.label :password_confirmation, t(:password_confirmation, :scope => "users.form")
      .input
        = f.password_field :password_confirmation

    .field
      .label
        = f.label :name, t(:name, :scope => "users.form")
      .input
        = f.text_field :name

    %br
    .field
      .label
        = f.label :account_type, t(:account_type, :scope => "users.form")
      .input
        = f.select :account_type, options_for_select([ "Personal Account","Financial Advisor Account" ], "Personal Account"), {:selected => "Personal Account"}, :class => "select"
    %br

    .field.agree
      = f.check_box :agrees_with_terms_of_service
      = t("users.new.agree", :privacy => privacy_path, :tos => tos_path)

    .submit
      = submit_tag t('.submit')
      %br
      = t(".already_registered")
      %br
      %br
